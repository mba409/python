import numpy as np
#In this script we use a for loop and if statement to count the number of array elements greater than three and less than three



x = np.array([1,2,3,4,5])
print(x)
numbers_greater_than_3 = 0
numbers_less_than_3 = 0
for iterator in range(5):
    z = x[iterator]
    if z > 3:
        numbers_greater_than_3 = numbers_greater_than_3 + 1
    else: numbers_less_than_3=numbers_less_than_3+1
        
            
                    
                  
                       



print("numbers_greater_than_3 =",numbers_greater_than_3)
print("numbers_less_than_3 = ",numbers_less_than_3)
